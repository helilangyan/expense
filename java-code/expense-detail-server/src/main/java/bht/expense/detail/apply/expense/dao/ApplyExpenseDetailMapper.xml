<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bht.expense.detail.apply.expense.dao.ApplyExpenseDetailMapper">

    <delete id="deleteByApplyId">
         delete from bus_apply_expense_detail where apply_id = #{applyId}
    </delete>

    <select id="findByApplyId" resultType="bht.expense.detail.detail.entity.ExpenseDetailEntity">
        select t2.*
        from bus_apply_expense_detail t1 left join bus_expense_detail t2 on t1.detail_id = t2.id
        where t1.apply_id = #{applyId}
    </select>

</mapper>